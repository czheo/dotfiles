# hardstatus
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%=  %{=kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%=  %{g}][%{B}%Y-%m-%d %{W}%c%{g}]'

# default screens on startup
# screen -t ScreenName ScreenNumber ShellCommand
screen -t t1		0
screen -t t2		1
screen -t t3		2

# default keybind
escape a
